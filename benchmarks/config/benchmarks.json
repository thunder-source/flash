    },
    {
      "name": "complex_expressions",
      "description": "Nested arithmetic expressions",
      "category": "compilation",
      "complexity": "cpu_intensive",
      "expected_compile_time_ms": 300,
      "validation": {
        "compilation_success": true
      }
    }
  ],

  "benchmark_settings": {
    "default_iterations": 5,
    "timeout_seconds": 30,
    "warmup_iterations": 1,
    "memory_profiling": true,
    "output_validation": true,
    "save_raw_results": true
  },

  "performance_targets": {
    "compilation_speed": {
      "flash_vs_gcc_o0_min_speedup": 2.0,
      "flash_vs_gcc_o0_target_speedup": 5.0,
      "flash_vs_clang_o0_min_speedup": 1.5,
      "max_memory_mb": 100
    },
    "runtime_performance": {
      "flash_vs_gcc_o3_max_ratio": 1.05,
      "flash_vs_gcc_o3_acceptable_ratio": 1.20,
      "flash_vs_gcc_o0_min_speedup": 1.5,
      "correctness_rate_min": 100
    },
    "binary_size": {
      "flash_vs_gcc_max_ratio": 0.9,
      "flash_vs_clang_max_ratio": 0.9
    }
  },

  "reporting": {
    "formats": ["json", "csv", "html"],
    "include_raw_data": false,
    "generate_charts": true,
    "store_history": true,
    "history_retention_days": 30
  },

  "system_requirements": {
    "min_memory_gb": 4,
    "min_cpu_cores": 2,
    "os": ["windows", "linux"],
    "required_tools": ["nasm", "powershell"]
  }
}
