{
  "version": "1.0",
  "description": "Flash Compiler Benchmark Configuration",
  "updated": "2024-01-15",

  "compilers": {
    "flash": {
      "executable": "flash.exe",
      "description": "Flash compiler written in assembly",
      "args": {
        "default": [],
        "debug": ["-g"],
        "release": ["-O"]
      },
      "file_extension": ".fl"
    },
    "gcc": {
      "executable": "gcc.exe",
      "description": "GNU Compiler Collection",
      "args": {
        "O0": ["-O0"],
        "O1": ["-O1"],
        "O2": ["-O2"],
        "O3": ["-O3"],
        "debug": ["-g", "-O0"],
        "release": ["-O3", "-DNDEBUG"]
      },
      "file_extension": ".c"
    },
    "clang": {
      "executable": "clang.exe",
      "description": "LLVM Clang compiler",
      "args": {
        "O0": ["-O0"],
        "O1": ["-O1"],
        "O2": ["-O2"],
        "O3": ["-O3"],
        "debug": ["-g", "-O0"],
        "release": ["-O3", "-DNDEBUG"]
      },
      "file_extension": ".c"
    },
    "msvc": {
      "executable": "cl.exe",
      "description": "Microsoft Visual C++ compiler",
      "args": {
        "debug": ["/Od", "/Zi"],
        "release": ["/O2", "/DNDEBUG"]
      },
      "file_extension": ".c"
    }
  },

  "benchmark_programs": [
    {
      "name": "fibonacci",
      "description": "Recursive and iterative Fibonacci calculation",
      "category": "algorithms",
      "complexity": "cpu_intensive",
      "expected_runtime_ms": 100,
      "validation": {
        "output_contains": ["Fibonacci benchmark completed successfully"],
        "exit_code": 0
      }
    },
    {
      "name": "prime_sieve",
      "description": "Sieve of Eratosthenes prime number generation",
      "category": "algorithms",
      "complexity": "memory_intensive",
      "expected_runtime_ms": 50,
      "validation": {
        "output_contains": ["Prime sieve benchmark completed successfully", "Found 9592 primes"],
        "exit_code": 0
      }
    },
    {
      "name": "quicksort",
      "description": "In-place quicksort implementation",
      "category": "algorithms",
      "complexity": "cpu_intensive",
      "expected_runtime_ms": 25,
      "validation": {
        "output_contains": ["Quicksort benchmark completed successfully"],
        "exit_code": 0
      }
    },
    {
      "name": "matrix_multiply",
      "description": "Dense matrix multiplication",
      "category": "numerical",
      "complexity": "cpu_intensive",
      "expected_runtime_ms": 200,
      "validation": {
        "output_contains": ["Matrix multiplication completed successfully"],
        "exit_code": 0
      }
    },
    {
      "name": "hash_table",
      "description": "Hash table with collision handling",
      "category": "data_structures",
      "complexity": "memory_intensive",
      "expected_runtime_ms": 75,
      "validation": {
        "output_contains": ["Hash table benchmark completed successfully"],
        "exit_code": 0
      }
    },
    {
      "name": "binary_tree",
      "description": "Binary search tree operations",
      "category": "data_structures",
      "complexity": "balanced",
      "expected_runtime_ms": 50,
      "validation": {
        "output_contains": ["Binary tree benchmark completed successfully"],
        "exit_code": 0
      }
    },
    {
      "name": "string_search",
      "description": "Boyer-Moore string searching algorithm",
      "category": "algorithms",
      "complexity": "balanced",
      "expected_runtime_ms": 30,
      "validation": {
        "output_contains": ["String search completed successfully"],
        "exit_code": 0
      }
    },
    {
      "name": "numerical",
      "description": "Floating point mathematical computations",
      "category": "numerical",
      "complexity": "cpu_intensive",
      "expected_runtime_ms": 150,
      "validation": {
        "output_contains": ["Numerical benchmark completed successfully"],
        "exit_code": 0
      }
    },
    {
      "name": "large_file",
      "description": "Large source file compilation test (10K+ lines)",
      "category": "compilation",
      "complexity": "memory_intensive",
      "expected_compile_time_ms": 1000,
      "validation": {
        "compilation_success": true
      }
    },
    {
      "name": "many_functions",
      "description": "Many small functions test (1000+ functions)",
      "category": "compilation",
      "complexity": "cpu_intensive",
      "expected_compile_time_ms": 500,
      "validation": {
        "compilation_success": true
      }
    },
    {
      "name": "deep_recursion",
      "description": "Deep recursive call chains",
      "category": "compilation",
      "complexity": "balanced",
